<div class="chat-card-frame">
  <div class="wrath-of-davokar chat-card">
    <div class="card-content">
      <div class="dice-roll">
        {{#if flavor}}
        <div class="dice-flavor">{{flavor}}</div>
        {{/if}}
        <div class="dice-result">
          <div class="dice-formula">{{formula}}</div>
          {{{tooltip}}}
          {{#if (and t2k (not isPrivate))}}
          <h4 class="dice-total">{{baseSuccessQty}}{{#if ammoSpent}}&nbsp;({{hitCount}}){{/if}}</h4>
          {{else}}
          <h4 class="dice-total">{{total}}</h4>
          {{/if}}
          {{#if (gt success 0)}}
          <h4 class="dice-total success">{{localize "YZUR.CHAT.Successes"}} : {{success}}</h4>
          {{/if}}
          {{#if (eq success 0)}}
          <h4 class="dice-total failure"> {{localize "YZUR.CHAT.Successes"}} : {{success}}</h4>
          {{/if}}
        </div>
      </div>

      {{!-- Extra info added for Year Zero rolls --}}
      {{#if showInfos}}
      {{{infos}}}
      {{/if}}

      {{!-- Push button --}}
      {{#if pushable}}
      <div class="dice-buttons">
        <button class="dice-button push" data-action="push" data-owner-id="{{roll.owner}}">{{localize "YZUR.CHAT.ROLL.Push"}}</button>
      </div>
      {{/if}}
    </div>
  </div>
</div>