{{!-- Encumbrance --}}

<div class="flex-row flex-align-center flex-gap">
  <span class="resource-title">{{localize 'WRATH_OF_DAVOKAR.Item.Encumbrance'}}:</span>
  <span class="resource-text">{{system.encumbrance.value}} / </span>
  <input type='number' step="1" min="0" name="system.encumbrance.max" value="{{system.encumbrance.max}}" data-dtype="Number" style="width: 2.5em;"/>
</div>
<hr>

{{!-- Body Armor --}}
<div class='items-title'>{{localize "TYPES.Item.armorBody"}}</div>
<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'WRATH_OF_DAVOKAR.Base.Name'}}</div>
    <div class='item-attribute'>{{localize 'WRATH_OF_DAVOKAR.Armor.Rating.long'}}</div>
    <div class='item-attribute'>{{localize 'WRATH_OF_DAVOKAR.Armor.Impeding.long'}}</div>
    <div class='item-attribute'>{{localize 'WRATH_OF_DAVOKAR.Item.Weight'}}</div>
    <div class='item-controls'></div>
  </li>
  {{#each armorBody as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable interactive' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>
          {{item.name}}
          {{#if item.system.isArtifact}}
            <img  class="icon" src='systems/wrath-of-davokar/assets/icons/artifact.svg'  title='{{localize 'WRATH_OF_DAVOKAR.Item.IsArtifact'}}' width='18' height='18'/>
          {{/if}}
        </h4>
      </div>
      <div class='item-attribute'>{{item.system.rating.value}}/{{item.system.rating.max}}</div>
      <div class='item-attribute'>{{item.system.impeding}}</div>
      <div class='item-attribute'>{{item.system.weight}}</div>
      <div class='item-controls'>
        {{#if item.system.equip}}
          {{#if item.system.equip.isEquipped}}
            <a class='item-control item-equip interactive' title='{{localize "WRATH_OF_DAVOKAR.Item.UnequipItem" type=(localize "Types.Item.armorBody")}}'>
              <img
                src='systems/wrath-of-davokar/assets/icons/battle-gear.svg'
                title='{{localize "WRATH_OF_DAVOKAR.Item.Equipped"}}'
                width='24'
                height='24'
              />
            </a>
          {{else}}
            <a class='item-control item-equip interactive' title='{{localize "WRATH_OF_DAVOKAR.Item.EquipItem" type=(localize "Types.Item.armorBody")}}'>
              <img
                src='systems/wrath-of-davokar/assets/icons/backpack.svg'
                title='{{localize "WRATH_OF_DAVOKAR.Item.Unequipped"}}'
                width='24'
                height='24'
              />
            </a>
          {{/if}}
        {{/if}}
        
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "Types.Item.armorBody")}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "Types.Item.armorBody")}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>

