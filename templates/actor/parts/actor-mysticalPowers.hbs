 {{!-- Sheet Tab Navigation --}}
  <nav class="power-tabs sheet-tabs tabs" data-group="mystical">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="powers">{{localize "WRATH_OF_DAVOKAR.Base.Tabs.Powers"}}</a>
    <a class="item" data-tab="rituals">{{localize "WRATH_OF_DAVOKAR.Base.Tabs.Rituals"}}</a>
    <a class="item" data-tab="artifacts">{{localize "WRATH_OF_DAVOKAR.Base.Tabs.ArtifactPowers"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="power-body sheet-body">
    {{!-- Mystical Powers --}}

    <div class="tab powers" data-group="mystical" data-tab="powers">
      <div class="flex-row flex-wrap flex-gap flex-group-left flex-align-stretch">
        {{#each mysticalPowers}}
          <div class="talent-card item flexgrow" data-item-id="{{this._id}}">
            <div class="talent-header flex-row flex-group-center flex-gap">
              <div class='item-image'>
                <a class='rollable interactive' data-roll-type='item'>
                  <img src='{{this.img}}' title='{{this.name}}' width='32' height='32' />
                </a>
              </div>
              <span class="flexgrow">{{this.name}}</span>
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.talent")}}' >
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.talent")}}'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
            <div class="talent-content">
              <div class="talent-text">
                {{editor
                  this.enrichedDescription
                  target=this.system.description
                  engine='prosemirror'
                  button=false
                  editable=false
                }}
              </div>
              <div class="resource-grid  talent-bottom-row">
                <b>{{localize "WRATH_OF_DAVOKAR.Power.Tradition.Label"}}:</b> 
                <span>{{localizeTraditions this.system.tradition}}</span>
                <b>{{localize "WRATH_OF_DAVOKAR.Action.Label"}}:</b> 
                <span>{{this.system.action}}</span>

                <b>{{localize "WRATH_OF_DAVOKAR.Rank.Label"}}:</b>
                <span>
                  {{#if (eq this.system.rank.value '1')}}
                    {{localize "WRATH_OF_DAVOKAR.Rank.One.Talent"}}
                  {{/if}}
                  {{#if (eq this.system.rank.value '2')}}
                    {{localize "WRATH_OF_DAVOKAR.Rank.Two.Talent"}}
                  {{/if}}
                  {{#if (eq this.system.rank.value '3')}}
                    {{localize "WRATH_OF_DAVOKAR.Rank.Three.Talent"}}
                  {{/if}}
                </span>
                <b>{{localize "WRATH_OF_DAVOKAR.Corruption.Label"}}:</b>
                  <span class='die-roll rollable' data-roll="{{this.system.corruption}}" data-label="{{localize 'WRATH_OF_DAVOKAR.Corruption.Temporary.long'}}">
                  <i class="fa-solid fa-dice-d20"></i> {{this.system.corruption}}
                </span>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    {{!-- Rituals Tab --}}
    <div class="tab rituals" data-group="mystical" data-tab="rituals">
      <div class="flex-row flex-wrap flex-gap flex-group-left flex-align-stretch">
        {{#each rituals}}
          <div class="talent-card item flexgrow" data-item-id="{{this._id}}">
            <div class="talent-header flex-row flex-group-center flex-gap">
              <div class='item-image'>
                <a class='rollable interactive' data-roll-type='item'>
                  <img src='{{this.img}}' title='{{this.name}}' width='32' height='32' />
                </a>
              </div>
              <span class="flexgrow">{{this.name}}</span>
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.mysticalPower")}}' >
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.mysticalPower")}}'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
            <div class="talent-text">
              {{editor
                this.enrichedDescription
                target=this.system.description
                engine='prosemirror'
                button=false
                editable=false
              }}
            </div>
            <div class="resource-grid ">
              <span><b>{{localize "WRATH_OF_DAVOKAR.Rank.Label"}}:</b></span>
              <span>
                {{#if (eq this.system.rank.value '1')}}
                  {{localize "WRATH_OF_DAVOKAR.Rank.One.Talent"}}
                {{/if}}
                {{#if (eq this.system.rank.value '2')}}
                  {{localize "WRATH_OF_DAVOKAR.Rank.Two.Talent"}}
                {{/if}}
                {{#if (eq this.system.rank.value '3')}}
                  {{localize "WRATH_OF_DAVOKAR.Rank.Three.Talent"}}
                {{/if}}
              </span>
              <span class="flexgrow talent-bottom-left"><b>{{localize "WRATH_OF_DAVOKAR.Corruption.Label"}}:</b></span>
              <span class='die-roll rollable' data-roll="{{this.system.corruption}}" data-label="{{localize 'WRATH_OF_DAVOKAR.Corruption.Temporary.long'}}">
                <i class="fa-solid fa-dice-d20"></i> {{this.system.corruption}}
              </span>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    {{!-- Artifact Powers Tab --}}
    <div class="tab artifacts flex-column flex-group-center flex-align-stretch flex-gap" data-group="mystical" data-tab="artifacts">
      {{#each artifacts as |item|}}
        <div class="panel item" data-item-id="{{item._id}}">
          <div class="panel-header flex-row flex-group-center flex-gap">
            <div class='item-image'>
              <a class='rollable interactive' data-roll-type='item'>
                <img src='{{item.img}}' title='{{item.name}}' width='32' height='32' />
              </a>
            </div>
            <span class="flexgrow">{{item.name}}</span>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.mysticalPower")}}' >
              <i class='fas fa-edit'></i>
            </a>
          </div>

          <div class="panel-content flex-row flex-wrap flex-gap flex-group-left flex-align-stretch">
            {{#each item.system.powers as |power|}}
              <div class="talent-card item flexgrow" data-item-id="{{item._id}}" data-power-id="{{@key}}">
                <div class="talent-header flex-row flex-group-center flex-gap">
                  <div class='item-image'>
                    <a class='showArtifactCard interactive' data-roll-type='item'>
                      <img src='{{power.img}}' title='{{power.name}}' width='32' height='32' />
                    </a>
                  </div>
                  <span class="flexgrow">{{power.name}}</span>
                </div>
                <div class="talent-content">
                  <div class="talent-text">
                    {{editor
                      power.enrichedDescription
                      target=power.description
                      engine='prosemirror'
                      button=false
                      editable=false
                    }}
                  </div>
                  <div class="resource-grid ">
                    <b>{{localize "WRATH_OF_DAVOKAR.Action.Label"}}:</b> 
                    <span>{{power.action}}</span>
                    <span class="flexgrow talent-bottom-left"><b>{{localize "WRATH_OF_DAVOKAR.Corruption.Label"}}:</b></span>
                    <span class='die-roll rollable' data-roll="{{power.corruption}}" data-label="{{localize 'WRATH_OF_DAVOKAR.Corruption.Temporary.long'}}">
                      <i class="fa-solid fa-dice-d20"></i> {{power.corruption}}
                    </span>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      {{/each}}
    </div>

  </section>







