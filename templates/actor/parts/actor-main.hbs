<div class="flex-row ">

  {{!-- Column One: Core Traits --}}
  <div class="flex-column flex-wrap flex-group-left flex-align-start flexshrink">
    {{!-- Toughness --}}
    <div class="panel-no-flex" >
      <div class="panel-header">{{localize 'WRATH_OF_DAVOKAR.Toughness.Label'}}</div>
      <div class="panel-content grid grid-6col flex-align-center">
        <div class="progress-bar grid-span-6">
          <div class="bar-toughness" style="width:{{system.toughness.percent}}%;"></div>
        </div>
        <input class="grid-span-2 align-center" type='number' step="1" min="0" name="system.toughness.value" value="{{system.toughness.value}}" data-dtype="Number"/>
        <div class="grid-span-2 align-center"> / </div>
        <input class="grid-span-2 align-center" type='number' step="1" min="0" name="system.toughness.max" value="{{system.toughness.max}}" data-dtype="Number"/>
        <div class="grid-span-4">{{localize 'WRATH_OF_DAVOKAR.Toughness.Threshold'}}: </div>
        <input class="grid-span-2 align-center" type='number' step="1" min="0" name="system.toughness.threshold" value="{{system.toughness.threshold}}" data-dtype="Number"/>
      </div>
    </div>

    {{!-- Corruption --}}
    <div class="panel-no-flex">
      <div class="panel-header">{{localize 'WRATH_OF_DAVOKAR.Corruption.Label'}}</div>
      <div class="panel-content grid grid-2col flex-align-center">
        <div class="progress-bar grid-span-2">
          <div class="bar-corruption-threshold" style="left:{{system.corruption.thresholdPercent}}%;"></div>
          <div class="bar-corruption-permanent" style="width:{{system.corruption.permanentPercent}}%;"></div>
          <div class="bar-corruption-temporary" style="width:{{system.corruption.temporaryPercent}}%;"></div>
        </div>
        
        <div>{{localize 'WRATH_OF_DAVOKAR.Corruption.Total'}}:</div>
        <div class="align-left">{{system.corruption.value}}</div>
        <div>{{localize 'WRATH_OF_DAVOKAR.Corruption.Permanent.short'}}:</div>
        <input class="corruption-permanent" type='number' step="1" min="0" value="{{system.corruption.min}}" data-dtype="Number"/>
        <div>{{localize 'WRATH_OF_DAVOKAR.Corruption.Temporary.short'}}:</div>
        <input class="corruption-temporary" type='number' step="1" min="0" value="{{system.corruption.temporary}}" data-dtype="Number"/>
        <div>{{localize 'WRATH_OF_DAVOKAR.Corruption.Threshold.short'}}:</div>
        <input type='number' step="1" min="0" name="system.corruption.threshold" value="{{system.corruption.threshold}}" data-dtype="Number"/>
